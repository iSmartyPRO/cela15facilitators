<!-- CONTENT -->
<div id="content" data-uk-height-viewport="expand: true">
  <div class="uk-container uk-container-expand">
    <!-- panel -->
    <div class="uk-width-1-1@l">
      <div class="uk-card uk-card-default uk-card-large uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto">
              <h2 class="uk-text-bold">Application Forms</h2>
              <a href="/cp/export/xlsx" class="uk-button uk-button-secondary">Export to Excel</a>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <table class="uk-table uk-table-small uk-table-divider">
            <thead>
              <tr>
                <th>Date</th>
                <th>Full Name</th>
                <th>Network Name (year)</th>
                <th>Country of citizenship</th>
                <th>Current residence</th>
                <th>Company name</th>
                <th>Company Industry</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#applications}}
              <tr>
                <th>{{formatDate createdAt}}</th>
                <th>{{fullName}}</th>
                <th>{{networkName}} {{ternary networkClassYear networkClassYear ''}}</th>
                <th>{{countryCitizen}}</th>
                <th>{{currentResidence}}</th>
                <th>{{companyName}}</th>
                <th>{{companyIndustry}}</th>
                <th><a href="/cp/application/{{_id}}" class="uk-button uk-button-primary">Details</a></th>
              </tr>

              {{/applications}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /CONTENT -->